{
  "name": "ts-node-mocha-mts",
  "version": "1.0.0",
  "description": "",
  "homepage": "https://github.com/azu/ts-node-mocha-mts",
  "bugs": {
    "url": "https://github.com/azu/ts-node-mocha-mts/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/azu/ts-node-mocha-mts.git"
  },
  "license": "MIT",
  "author": "azu",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./module/ts-node-mocha-mts.d.ts",
        "default": "./module/ts-node-mocha-mts.js"
      },
      "default": "./module/ts-node-mocha-mts.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./module/ts-node-mocha-mts.js",
  "types": "./module/ts-node-mocha-mts.d.ts",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "files": [
    "bin/",
    "module/",
    "src/"
  ],
  "scripts": {
    "build": "tsc -p .",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "prepare": "git config --local core.hooksPath .githooks",
    "prepublishOnly": "npm run build",
    "test": "mocha",
    "watch": "tsc -p . --watch"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "none"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.1",
    "mocha": "^10.2.0",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "packageManager": "yarn@1.22.19"
}
